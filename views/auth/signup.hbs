



<div class="signup-block">
  <h1 class="ramaraja p-10" style="font-size: 3em;">Sign up:</h1>


  <div
    class="container text-center d-flex justify-content-center align-items-center h-100 w-75" style="background-color: aliceblue; padding: 30px; padding-bottom: 10px; border: rgb(198, 225, 255) solid 1px;"
  >

    <main class="form-signin d-flex flex-column justify-content-center w-100">

      <form
        class="loginForm justify-content-center"
        style="height: 50%"
        action="/auth/signup"
        method="POST"
      >

        <div class="form-floating mb-3">
          <input
            class="form-control w-100"
            id="floatingName"
            type="text"
            name="name"
            placeholder="Name"
            required
          />
          <label for="floatingName">Name</label>
        </div>

        <div class="form-floating mb-3">
          <input
            class="form-control w-100"
            id="floatingSurname"
            type="text"
            name="surname"
            placeholder="Surname"
            required
          />
          <label for="floatingSurname">Surname</label>
        </div>


        <div class="form-floating mb-3">
          <input
            class="form-control w-100"
            id="floatingUsername"
            type="text"
            name="username"
            placeholder="Username"
            required
          />
          <label for="floatingUsername">Username</label>
        </div>


        <div class="form-floating mb-3">
          <input
            class="form-control w-100"
            id="floatingEmail"
            type="email"
            name="email"
            placeholder="Email"
            required
          />
          <label for="floatingEmail">Email</label>
        </div>


        <div class="form-floating mb-3">
          <input
            class="form-control w-100"
            id="floatingPassword"
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <label for="floatingPassword">Password</label>
        </div>


        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign me up!</button>
      </form>

    </main>
  </div>

  <a href="/auth"  class="mt-3" style="">I already have an acount!</a>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</div>