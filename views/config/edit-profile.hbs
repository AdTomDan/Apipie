<h1>Please, introduce your new profile details: </h1>

<form action="/users/profile/edit/{{_id}}" method="POST" enctype="multipart/form-data" >

  <label for="name">Name: </label>
  <input type="text" value="{{name}}" name="name" required><br>

  <br>
  
  <label for="profilePhoto"></label>
  <input type="file" name="imgUrl"/>
  
  <br>
  <br>

  <label for="surname">Surname: </label>
  <input type="text" value="{{surname}}" name="surname" required><br>

  <br>

  <label for="username">Username: </label>
  <input type="text" name="username" value="{{username}}" required><hr>
  
  <br>

  <label for="email">Email: </label>
  <input type="email" name="email" value="{{email}}" required><br>

  <br>

  <label for="password">Password: </label>
  <input type="password" name="password" id="password" placeholder="Type your new password"><hr>

  <br>

  <button type="submit">Submit new changes</button>
</form>

<a href="/welcome">Back</a>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}