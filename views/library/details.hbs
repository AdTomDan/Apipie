{{>navbar userInfo=userInfo}}
<div class="container">
            <h2>{{recipe.name}}</h2>
            <div class="d-flex align-items-center">
            <img width="30px" height="30px" class="rounded-circle" style="margin-right: 5px;" src="{{recipe.author.profilePhoto}}" alt="profile photo">
            <a href="/profile/{{recipe.author._id}}" class="link-dark text-decoration-none">by: @{{recipe.author.username}}</a></div>
            <hr>
    <div class="row d-flex flex-column w-80 align-items-center">
        <div class="col p-2 w-100">
            <img src="{{recipe.recipePhoto}}" style="width:100%">
        </div>
        <div class="col p-2 w-100">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Overview</h5><hr>
              <p class="card-text">Prep Time: <em>{{recipe.prepTime}} mins</em></p>
              <p class="card-text">Cooking Time: <em>{{recipe.cookingTime}} mins</em></p>
              <p class="card-text">Difficulty: <em>{{recipe.difficulty}}</em></p>
              <p class="card-text">Flavour: <em>{{recipe.flavour}}</em></p>
            </div>
          </div>
        </div>
    </div>
</div>
<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        Ingredients
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <ul>
            {{#each recipe.ingredients}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
        Steps
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse show" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
      <div class="accordion-body">
          <ol>
            {{#each recipe.steps}}
                <li>{{this}}</li>
            {{/each}}
          </ol>
      </div>
    </div>
  </div>
{{#if showDelete}}
<hr>
<a class="btn btn-danger" href="/library/delete/{{recipe._id}}">Delete Pie</a>
{{/if}}
</div>
{{#if showEdit}}
<hr>
<a class="btn btn-warning mb-3" href="/library/edit/{{recipe._id}}">Edit Pie</a>
{{/if}}