{{>navbar userInfo=userInfo}}


<h1>Results for {{search}}:</h1>
<div class="container">
  <div class="row">
    {{#each recipes}}
      <div class="card p-1 m-2" style="width: 12rem;">
      <img src="{{this.recipePhoto}}" class="card-img-top" alt="{{this.name}}">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.author.username}}</p>
        <a href="/library/details/{{this.id}}" class="btn btn-primary">See details</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>


